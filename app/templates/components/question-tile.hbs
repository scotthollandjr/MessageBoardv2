<p>Comment of the year:</p>
{{#each bestQuestion.comments as |comment|}}
  <p>{{comment.username}}: {{comment.content}}</p>
{{/each}}

<div>
  {{time-stamp question}}
  <p>{{question.subject}}</p>
  <p>{{question.username}}</p>
  <p>{{question.content}}</p>
  <button {{action 'delete' question}}>Delete</button>
</div>

<div class="commentBox">
  {{#each sortedComments as |comment|}}
    {{comment-tile comment=comment update="update" upvote="upvote" downvote="downvote" destroyComment="destroyComment"}}
  {{/each}}
</div>
