<div class="{{hide-trolls comment.score}}">
  <p>{{comment.date}}</p>
  {{currentScore}}
  <p>{{comment.username}}: {{comment.content}}</p>
  <button {{action 'upvote' comment}}>upvote</button>
  <button {{action 'downvote' comment}}>downvote</button>

  {{#if updateCommentForm}}
    <h4>Update comment</h4>
    <div>
      <form>
        <div class="form-group">
          {{input value=content id="content" placeholder="Comment:"}}
        </div>
        <button {{action 'update' comment}}>Save</button>
      </form>
    </div>
  {{else}}
    <button {{action 'updateCommentForm'}}>Update</button>
  {{/if}}

  <button {{action 'delete' comment}}>Delete</button>
  <hr>
</div>
